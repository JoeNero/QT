QScrollBar {
    border: none;
    background: rgba(0,0,0,0);
    width: 10px;
    margin: 0px 0 0px 0;
}
QScrollBar::handle {
    background: rgba(0,0,0,20%);
    min-height: 10px;
	max-height: 10px;
    border-radius: 5px;
    border: none;
}
QScrollBar::add-line {
    border: 0px solid grey;
    background: #32CC99;
    height: 0px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}
QScrollBar::sub-line {
    border: 0px solid grey;
    background: #32CC99;
    height: 0px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}
QScrollBar::add-page, QScrollBar::sub-page {
    background: none;
    width: 0px;
    height: 0px;
}


QTabWidget::pane {
	border:0px solid #C3C7CB;
	margin-left:10px;
	margin-right:5px;
}

QTabWidget::tab-bar {
	left:0px;
}

/* 标签外形设置 */
QTabBar::tab {
	background:rgba(0,0,0,0%);
	min-width:60px;
	padding:8px;
	border: 2px;
}

/* 标签被选中时或鼠标悬浮时 */
QTabBar::tab:selected,QTabBar::tab:hover {
	background:rgba(0,0,0,0);
	color:#feef02;
}

/* 标签被选中时 */
QTabBar::tab:selected {
	border:2px;
	border-color:#9B9B9B;
	border-bottom-color:#feef02;
}

/* 标签未被选中时 */
QTabBar::tab:!selected {
	margin-top:2px;
}

/* 标签被选中时,外框向外扩大 */
QTabBar::tab:selected {
	margin-left:-4px;
	margin-right:-4px;
}

/* 最左边的标签被选中时,外框不变化 */
QTabBar::tab:first:selected {
	margin-left:0px;
}

/* 最右边的标签被选中时,外框不变化 */
QTabBar::tab:last:selected {
	margin-right:0;
}


