QSlider{
	background-color: rgba(25, 38, 58, 0%);
	max-height: 2px;
}
QSlider::groove:horizontal{
	/*background:transparent;*/
    height:1px;
}
QSlider::handle:horizontal{
	height:1px;
    width:1px;
    background-color: #316bfc;
	border-radius: 1px;
}

/*划过*/
QSlider::sub-page:horizontal{
    background-color:qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, stop:0 rgba(231,80,229, 255), stop:1 rgba(7,208,255, 255));
    max-height:1px;
}

/*未划过*/
QSlider::add-page:horizontal{
    background-color: rgb(87, 97, 106);
    height:2px;
}

 
 /*QListWidget#func_listWidget*/
 
QListWidget::item:hover
{
    show-decoration-selected:5;
		border:0px;
	border-radius: 10px;
    background:rgba(0,0,0, 25%);
}
 
QListWidget::item:selected
{
    /*border:0px;*/
    background:rgba(254,239,2, 50%);
	border:0px;
	border-radius: 10px;
    padding:0px;
    margin:0px;
    color:red;
}
 
/*上次选择后保留的状态，鼠标离开后显示*/
QListWidget::item:selected:!active
{
	border:0px;
	border-radius: 10px;
    border-width:0px;
    background:rgba(0,0,0, 25%);
}
 
 
